<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeteringAndMonitorSystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="myStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="GridStyle">
        <item name="android:layout_rowWeight">1</item>
        <!--        <item name="android:gravity">center</item>-->
        <item name="android:layout_columnWeight">1</item>
        <!--        <item name="android:layout_gravity">fill</item>-->
        <item name="android:layout_weight">1</item>

    </style>

    <style name="GridStyleWeight2">
        <item name="android:layout_rowWeight">1</item>
        <!--        <item name="android:gravity">center</item>-->
        <item name="android:layout_columnWeight">2</item>
        <!--        <item name="android:layout_gravity">fill</item>-->
        <item name="android:layout_weight">1</item>
        <!--        <item name="android:layout_margin">10dp</item>-->
    </style>

    <style name="TitleText">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SimpleText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_margin">10dp</item>

    </style>

    <style name="LinerLayoutPreset">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>